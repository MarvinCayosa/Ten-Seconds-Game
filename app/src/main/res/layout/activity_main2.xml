<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/bggiff" />

    <ImageView
        android:layout_width="269dp"
        android:layout_height="444dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/console" />

    <TextView
        android:id="@+id/txt_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="235dp"
        android:fontFamily="@font/depixek"
        android:text="00:000"
        android:textColor="#37EC3E"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txt_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp"
        android:fontFamily="@font/depixek"
        android:textColor="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/btn_start_stop"
        android:layout_width="318px"
        android:layout_height="311px"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="218dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/redbtn" />

    <TextView
        android:id="@+id/button_txt"
        android:layout_width="102dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="252dp"
        android:fontFamily="@font/mob"
        android:gravity="center"
        android:text="Start"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/btn_leaderboard"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="633dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/leaderboard" />

</RelativeLayout>